<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>queryengine-${project.version}-full</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
        <!-- Include test JARs if present... -->
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*tests.jar</include>
            </includes>
        </fileSet>
  </fileSets>

  <moduleSets>
    <moduleSet>

      <!--
        Enable access to all projects in the current multimodule build!
        This module cannot be run on it's own since it needs access to all the other modules.
      -->
      <useAllReactorProjects>true</useAllReactorProjects>

      <includes>
        <!-- Includes seqware-pipeline and all it's dependencies. -->
        <include>net.sourceforge.seqware:seqware-queryengine</include>
      </includes>

      <binaries>
        <outputDirectory>/</outputDirectory>
        <unpack>true</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>

