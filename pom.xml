                            <artifactId>plexus-compiler-api</artifactId>
                            <version>1.8.2</version>
                        </dependency>
                    </dependencies>
                    -->
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>findbugs-maven-plugin</artifactId>
                    <version>${findbugs.version}</version>
                    <configuration>
